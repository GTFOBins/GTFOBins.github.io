---
functions:
  file-write:
  - code: |-
      ash -c 'echo DATA >/path/to/output-file'
    contexts:
      sudo:
      suid:
        code: |-
          ash -p -c 'echo DATA >/path/to/output-file'
      unprivileged:
  shell:
  - code: |-
      ash
    contexts:
      sudo:
      suid:
        code: |-
          ash -p
      unprivileged:
...
