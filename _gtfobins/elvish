---
functions:
  file-read:
  - code: |-
      elvish -c 'print (slurp </path/to/input-file)'
    contexts:
      sudo:
      suid:
      unprivileged:
  file-write:
  - code: |-
      elvish -c 'print DATA >/path/to/output-file'
    contexts:
      sudo:
      suid:
      unprivileged:
  shell:
  - code: |-
      elvish
    contexts:
      sudo:
      suid:
      unprivileged:
...
