---
functions:
  file-write:
  - code: |-
      make -s --eval='$(file >/path/to/output-file,DATA)' .
    contexts:
      sudo:
      suid:
      unprivileged:
    version: GNU
  shell:
  - code: |-
      make -s --eval=$'x:\n\t-/bin/sh'
    contexts:
      sudo:
      suid:
        shell: true
      unprivileged:
    version: GNU
...
