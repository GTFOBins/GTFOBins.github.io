---
functions:
  file-read:
  - code: |-
      uv run cat /path/to/file-input
    contexts:
      sudo:
      suid:
      unprivileged:
  file-write:
  - code: |-
      uv run sh -c 'echo data > /path/to/file-output'
    contexts:
      sudo:
      suid:
      unprivileged:
  inherit:
  - code: |-
      uv run CMD
    contexts:
      unprivileged:
    from: pip
  shell:
  - code: |-
      uv run /bin/sh
    contexts:
      sudo:
      suid:
      unprivileged:
...
