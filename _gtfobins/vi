---
functions:
  file-read:
  - code: |-
      vi /path/to/input-file
    contexts:
      sudo:
      suid:
      unprivileged:
  file-write:
  - code: |-
      vi /path/to/output-file
      iDATA
      ^[
      w
    comment: |-
      Where `^[` is the escape key.
    contexts:
      sudo:
      suid:
      unprivileged:
  shell:
  - code: |-
      vi -c ':!/bin/sh' /dev/null
    contexts:
      sudo:
      suid:
        shell: true
      unprivileged:
  - code: |-
      vi
      :shell
    contexts:
      sudo:
      suid:
        shell: true
      unprivileged:
...
